  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Temporal API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/golang/temporal/apps/api/cmd/api/main.go",
      "cwd": "${workspaceFolder}/golang/temporal/apps/api/"
    },
    {
      "name": "Debug Faceblur API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/faceblur/apps/backend/cmd/api/main.go",
      "cwd": "${workspaceFolder}/faceblur/apps/backend/",
      "envFile": "${workspaceFolder}/faceblur/.env.local"
    },
    {
      "name": "Debug Faceblur Worker",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/faceblur/apps/backend/cmd/worker/main.go",
      "cwd": "${workspaceFolder}/faceblur/apps/backend/",
      "envFile": "${workspaceFolder}/faceblur/.env.local"
    }
  ]
}
